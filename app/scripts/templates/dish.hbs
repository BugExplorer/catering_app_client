<div class="checkbox">
  <label>
    <input type="checkbox" id="{{dish.id}}">
    {{dish.title}}
  </label>
  <span class="pull-right price">{{dish.price}} UAH</span>
</div>
<br>
<div class="form-group">
  <label class="control-label col-md-3">Quantity:</label>
  <div class="col-md-8 col-md-offset-1">
    <input type="number" class="form-control" id="input{{dish.id}}"
      disabled name="days[{{dish.day_id}}][{{dish.id}}]"
      min="1" value="1">
  </div>
</div>
